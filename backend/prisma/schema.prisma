
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  admin
  user
}

model Blog {
  id             String   @id @default(uuid())
  title          String
  slug           String   @unique
  content        String
  tag            String?
  category       String?
  published_date DateTime @default(now())

  author         String
  user           User     @relation("UserBlogs", fields: [author], references: [id], onDelete: Cascade)

  @@map("blogs")
}

model User {
  id          String   @id @default(uuid())
  username    String   @unique
  email       String   @unique
  password    String
  role        Role     @default(user)
  created_at  DateTime @default(now())
  deleted_at  DateTime?

  blogs       Blog[]   @relation("UserBlogs")

  @@map("users")
}

model EmailSubmission {
  id String @id @default(uuid())
  firstname String
  lastname String?
  email String @unique
  content String
  date DateTime @default(now())
}
